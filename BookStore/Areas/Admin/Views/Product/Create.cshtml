@using BookStore.Models.Models
@model ProductVM

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                <i class="bi bi-box"></i> Create Product
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3 row p-1">
            <label>Product Title</label>
            <input asp-for="Product.Title" class="form-control">
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product Description</label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product Author</label>
            <input asp-for="Product.Author" class="form-control">
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product ISBN</label>
            <input asp-for="Product.ISBN" class="form-control">
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product List Price</label>
            <input asp-for="Product.ListPrice" class="form-control" type="number" step="0.01">
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product Price</label>
            <input asp-for="Product.Price" class="form-control" type="number" step="0.01">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product Price50</label>
            <input asp-for="Product.Price50" class="form-control" type="number" step="0.01">
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Product Price100</label>
            <input asp-for="Product.Price100" class="form-control" type="number" step="0.01">
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label>Image URL</label>
            <input asp-for="Product.ImageURL" type="file" name="file" class="form-control">
            <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Product.CategoryId" class="me-2">Category</label>
            <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                <option disabled selected>-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width: 100%; max-width: 200px; padding: 10px 20px; font-size: 16px;">
                    <i class="bi bi-check-circle"></i> Create
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-light" style="width: 100%; max-width: 200px; padding: 10px 20px; font-size: 16px;">
                    <i class="bi bi-arrow-left-circle"></i> Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
