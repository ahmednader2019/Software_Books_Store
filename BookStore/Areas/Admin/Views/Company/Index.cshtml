<partial name="_Notification" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-building"></i> Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Company" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New Company
            </a>
        </div>
    </div>

    <table id="tblData2" class="table table-hover table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th><i class="bi bi-person"></i> Name</th>
                <th><i class="bi bi-house"></i> Address</th>
                <th><i class="bi bi-geo-alt"></i> City</th>
                <th><i class="bi bi-geo"></i> State</th>
                <th><i class="bi bi-envelope"></i> Postal Code</th>
                <th><i class="bi bi-telephone"></i> Phone Number</th>
                <th class="text-center"><i class="bi bi-tools"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.streetAddress</td>
                    <td>@item.city</td>
                    <td>@item.state</td>
                    <td>@item.postalCode</td>
                    <td>@item.phoneNumber</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mx-1" title="Edit Company">
                            <i class="bi bi-pen-fill"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1" title="Delete Company">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
