@model int

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center mb-4">
            <h1 class="text-success fw-bold">
                <i class="fas fa-check-circle me-2"></i> Order Placed Successfully!
            </h1>
            <p class="lead">Thank you for your purchase!</p>
            <h4 class="text-muted">Your Order Number is: <span class="fw-bold text-dark">@Model</span></h4>
            <div class="my-4">
                <img src="~/Images/lawn_leaf.jpg" class="img-fluid rounded shadow-sm" style="max-width: 75%;" alt="Order Confirmation" />
            </div>
        </div>
        <div class="col-12 text-center text-danger fw-semibold">
            <p>Your order has been placed successfully!</p>
        </div>
    </div>
</div>

